doctype html
include components/components.pug

html(lang='ru')
  head
    link(href=require('main.scss'), rel='stylesheet')
    meta(charset='utf-8')
    title= 'Test page'
  body
    +styledButton('Primary')
    +styledButton('Secondary', type='secondary')
    +styledButton('Alternate', type='alternate')
    +styledButton('Primary', type='primary', disabled=true)
    +styledButton('Secondary', type='secondary', true)
    +styledButton('Alternate', type='alternate', true)
    div(style={ width: '200px' })
      - const date = new Date();
      +calendar(date, from=5, to=14)
    div(style='display: flex')
      +checkbox('Checkbox')
      +checkbox('Checkbox checked')(checked)
      +checkbox('Checkbox disabled')(disabled)
    div(style='display: flex')
      +radio('Radio 1')(name='group')
      +radio('Radio 2')(name='group', checked)
      +radio('Radio 3')(name='group', disabled)
    div(style='display: flex')
      +toggler
      +toggler(_)(checked)
      +toggler('Disabled')(disabled)
    div(style='display: flex')
      +theme-changer
      +theme-changer(_)(checked)
      +theme-changer('Theme changer')(disabled)
