extends templates/template.pug

block head
  - const menuConfig = require('templates/menu/menu-config.js');
  title HTML project

block title
  h1.header__title Reusable component library

block content
  -
    const map = { 
      'all-tab': 'All components',
      'elements-tab': 'Elements',
      'containers-tab': 'Containers',
      'templates-tab': 'Templates'
    }

  +tab-control(map)
    +tab-content('all-tab')
      section.preview
        .container
          .preview__inner
            +card('inputs', 'Custom form elements', 'Element')
              .demo
                +checkbox('Default')
                +radio('Default')
                +checkbox('Checked')(checked)
                +radio('Selected')(checked)
                +checkbox('Disabled')(disabled)
                +radio('Disabled')(disabled)
            +card('calendar', 'Calendar', 'Container')
              - const date = new Date();
              +calendar(date, 6, 12)
            +card('avatar', 'Avatar', 'Element')
              +avatar(require('@images/avatar-200.jpg'), isLarge=true)
            +card('histogram', 'Histogram', 'Template')
              -
                const data = Array.from({length: 40}, () => Math.floor(Math.random() * 40));
              +histogram("Total orders", "123456", data).histogram_embedded

            +card('tooltip', 'Tooltip', 'Container')
              +tooltip('Helper text', true, true)
                svg.icon: use(
                  href=`${require('assets/images/icons_sprite.svg')}#questionmark`
                )

    +tab-content('elements-tab')= 'Hello'

block footer
  footer.footer
    .footer__inner
      .footer__title About
      p.footer__description
        | This project is a collection of professionally designed, pre-built,
        | fully responsive HTML snippets you can drop into your projects. Get
        | started by checking out our free preview components, or browsing the
        | PNG previews in the categories you're most curious about.
